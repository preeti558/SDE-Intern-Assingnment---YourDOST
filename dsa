import java.util.*;

//Problem:Given an array of integers, return the second largest unique number in the array.If it doesnâ€™t exist, return -1.

public class Solution {
    public static int findSecondLargestElem(int[] nums){
        if(nums.length <= 1){
            return -1;
        }
        int firstLargest = Integer.MIN_VALUE, secondLargest = Integer.MIN_VALUE;
        for(int num : nums){
            if(firstLargest < num){
                secondLargest = firstLargest;
                firstLargest = num;
            }else if(num != firstLargest && secondLargest < num){
                secondLargest = num;
            }
        }
        return secondLargest == Integer.MIN_VALUE ? -1 : secondLargest;
    }
    public static void main(String[] args) {
        int[] arr1 = {3, 5, 2, 5, 6, 6, 1};
        System.out.println("Second Largest element in arr1 is : " + findSecondLargestElem(arr1));

        int[] arr2 = {7, 7, 7};
        System.out.println("Second Largest element in arr2 is : " + findSecondLargestElem(arr2));
    }
}
